# Database
# ----------------------------------

# Adapter
# 1. memory
# 2. nedb
# 3. mongo
DB_ADAPTER=memory

# If DB_ADAPTER=nedb, this is be the nedb folder
NEDB_FOLDER=nedb

# Default Mongo database
MONGO_URI=mongodb://localhost/yourwebsite
MONGO_URI_DEFAULT=mongodb://localhost/yourwebsite

# Website
# ----------------------------------

# Address
NOW_URL=http://localhost:3000
# Name
SITE_NAME=yourwebsite

# Email
# ----------------------------------
MAIL_ENABLED=true
MAIL_NOREPLY=noreply@yourwebsite.com

# Accounts
# ----------------------------------
ACCOUNTS_SIGNUP_ENABLED=true
ACCOUNTS_USERNAME_ENABLED=true
ACCOUNTS_PASSWORDLESS_ENABLED=true
ACCOUNTS_VERIFICATION_ENABLED=true
ACCOUNTS_DEFAULT_ROLE=user
ACCOUNTS_DEFAULT_PLAN=free
ACCOUNTS_JWT_EXPIRESIN=30d
ACCOUNTS_TWOFACTOR_ENABLED=true
ACCOUNTS_HASH_SALT_ROUND=10
ACCOUNTS_PASSWORDLESS_TOKEN_EXPIRES=3600000 # 1 hour
ACCOUNTS_RESET_TOKEN_EXPIRES=3600000 # 1 hour

